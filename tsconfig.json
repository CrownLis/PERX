{
  "compilerOptions": {
    "target": "es6",
    "lib": ["DOM", "ES6", "DOM.Iterable"],
    "module": "commonjs",
    "jsx": "react-jsx",
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node"],
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
